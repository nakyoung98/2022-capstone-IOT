<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="guardian_setting_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">32dp</item>
        <item name="android:layout_marginTop">64dp</item>
        <item name="android:background">@drawable/guardian_setting_add_button</item>
        <item name="android:fontFamily">@font/chosun_nm</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:textColor">@color/blue</item>
        <item name="android:textSize">30dp</item>
    </style>

    <style name="noyakja_main_button" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">32dp</item>
        <item name="android:layout_marginEnd">32dp</item>
        <item name="android:background">@drawable/time_setting_button_background</item>
        <item name="android:fontFamily">@font/chosun_nm</item>
        <item name="android:textColor">@color/text_gray</item>
        <item name="android:textSize">30dp</item>
    </style>

    <style name="time_setting_off_toggle" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/medicine_count_background_off</item>
        <item name="android:fontFamily">@font/chosun_nm</item>
        <item name="android:textColor">@color/blue</item>
        <item name="android:textSize">30dp</item>
    </style>

    <style name="boxStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">32dp</item>
        <item name="android:background">@drawable/box_background</item>
        <item name="android:ems">10</item>
        <item name="android:fontFamily">@font/chosun_nm</item>
        <item name="android:gravity">center</item>
        <item name="android:inputType">time</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColor">@color/text_gray</item>
        <item name="android:textColorHint">@color/text_gray</item>
        <item name="android:textSize">30dp</item>
    </style>
</resources>